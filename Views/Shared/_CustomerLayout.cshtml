<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>MyMovies - Booking Tickets</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

    <link href="https://fonts.googleapis.com/css2?family=Cinzel+Decorative:wght@700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Movie.styles.css" asp-append-version="true" />
    @* <link href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" /> *@
  

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />




    <style>
        body {
            background-color: #f5f6fa;
        }

        /* Navbar Brand */
        header .navbar-brand {
            font-family: 'Cinzel Decorative', cursive;
            font-size: 1.8rem;
            font-weight: bold;
            color: #ff4757 !important;
            margin-right: 20px;
        }

        /* Shared Button Styles (Dashboard + Register) */
        .dashboard-btn,
        .register-btn {
            min-width: 140px; /* 🔥 Same width for both buttons */
            justify-content: center;
            text-align: center;
            padding: 8px 18px;
            font-weight: bold;
            border-radius: 30px;
            display: flex;
            align-items: center;
            gap: 8px;
            transition: all 0.3s ease;
            font-size: 1rem;
        }

        /* Dashboard Button */
        .dashboard-btn {
            background: linear-gradient(135deg, #1e90ff, #3742fa);
            color: #fff !important;
            box-shadow: 0px 4px 10px rgba(30, 144, 255, 0.3);
            margin-left: 10px;
        }

            .dashboard-btn i {
                background: #fff;
                color: #1e90ff;
                border-radius: 50%;
                padding: 4px;
                font-size: 1rem;
            }

            .dashboard-btn:hover {
                transform: scale(1.08);
                box-shadow: 0px 6px 20px rgba(30, 144, 255, 0.6);
            }

        /* Register Button */
        .register-btn {
            background: linear-gradient(135deg, #ff6b6b, #ff4757);
            color: #fff !important;
            box-shadow: 0px 4px 10px rgba(255, 71, 87, 0.3);
            margin-left: 15px; /* Space between Dashboard & Register */
        }

            .register-btn i {
                background: #fff;
                color: #ff4757;
                border-radius: 50%;
                padding: 4px;
                font-size: 1rem;
            }

            .register-btn:hover {
                transform: scale(1.08);
                box-shadow: 0px 6px 20px rgba(255, 71, 87, 0.6);
            }

        /* Movie Card Styles */
        .movie-card {
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0px 4px 10px rgba(0,0,0,0.1);
            transition: transform 0.2s ease;
        }

            .movie-card:hover {
                transform: scale(1.03);
            }

        .card-img-top {
            height: 250px;
            object-fit: cover;
        }

        .card-title {
            background-color: #e0e0e0;
            padding: 8px;
            border-radius: 8px;
        }

        /* Footer */
        footer {
            background-color: #2f3542;
            color: #fff;
            padding: 20px 0;
            text-align: center;
            margin-top: 40px;
        }

        .search-bar {
            max-width: 250px;
        }

        .toast-success {
            background-color: #28a745 !important;
            color: #fff !important;
        }

        .toast-error {
            background-color: #dc3545 !important;
            color: #fff !important;
        }

        .toast-info {
            background-color: #17a2b8 !important;
            color: #fff !important;
        }

        .toast-warning {
            background-color: #ffc107 !important;
            color: #000 !important;
        }
    </style>
</head>
<body>

    <!-- Header & Navigation -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark px-4">
            <a class="navbar-brand" href="/Customer/Home/Index">MyMovies</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <!-- Navigation Links -->
                <ul class="navbar-nav me-auto">
                    <li class="nav-item"><a class="nav-link" href="/Customer/Home/Index">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Customer/Home/Category">Categories</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Customer/Home/Ceima">Cinemas</a></li>
                </ul>

                <!-- Dashboard & Register Buttons -->

                @if(User.Identity.IsAuthenticated)
                {
                     <ul class="navbar-nav">
                        <li class="nav-item ms-3">
                            <a class="nav-link position-relative cart-btn btn btn-light rounded-pill shadow-sm px-3 py-2"  href="/Customer/Cart/Products" style="transition: 0.3s;">
                                <i class="bi bi-cart4 me-1 fs-5"></i>
                                <span class="fw-bold">My Cart</span>

                            </a>
                        </li>

                    <li class="nav-item">
                        <a class="nav-link dashboard-btn" href="/Admin/Home/Index">
                            <i class="bi bi-speedometer2"></i> Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link register-btn" href="/Identity/Account/LogOut">
                            <i class="bi bi-person-fill"></i> LogOut
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link dashboard-btn" href="/Identity/Profile/ProfileIndex">
                            <i></i> Welcome @User.Identity.Name
                        </a>
                    </li>

                        @if (User.Identity.Name == "Admin22")
                        {
                            <li class="nav-item">
                                <a class="nav-link dashboard-btn" href="/Admin/Home/Index">
                                    <i class="bi bi-speedometer2"></i> Dashboard
                                </a>
                            </li>
                        }

             
                    </ul>

                }
                else
                {
                    <ul class="navbar-nav">

                        <li class="nav-item">
                            <a class="nav-link register-btn" href="/Identity/Account/Index">
                                <i class="bi bi-person-fill"></i> Register
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link register-btn" href="/Identity/Account/Login">
                                <i class="bi bi-person-fill"></i> Login 
                            </a>
                        </li>
 
                    </ul>                   
                }
               
            </div>
        </nav>
    </header>

    <!-- Main Section -->
    @RenderBody()

    <!-- Footer -->
    <footer>
        <p>&copy; 2025 MyMovies. All Rights Reserved.</p>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    @* <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script> *@

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @await RenderSectionAsync("Styles", required: false)
  
</body>
</html>
