<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Movie Website Dashboard</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Movie.styles.css" asp-append-version="true" />

    <style>
        body {
            background: #fff;
            font-family: Arial, sans-serif;
        }

        /* Sidebar */
        .sidebar {
            width: 220px;
            background: #2f3542;
            min-height: 100vh;
            padding-top: 20px;
            position: fixed;
            left: 0;
            top: 0;
        }

            .sidebar h2 {
                color: #fff;
                text-align: center;
                margin-bottom: 30px;
                font-size: 1.8rem;
                font-weight: bold;
            }

            .sidebar a {
                display: block;
                padding: 15px 20px;
                color: #fff;
                text-decoration: none;
                font-size: 1.1rem;
                margin-bottom: 5px;
                transition: background 0.3s;
            }

                .sidebar a:hover {
                    background: #57606f;
                    border-radius: 5px;
                }

        /* Main Content */
        .main-content {
            margin-left: 240px;
            padding: 30px;
        }

        .dashboard-header {
            margin-bottom: 30px;
        }

            .dashboard-header h1 {
                font-size: 2.2rem;
                font-weight: bold;
                color: #2f3542;
            }

        /* Summary Cards */
        .summary-card {
            border-radius: 15px;
            padding: 25px;
            box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.1);
            text-align: center;
            background: #fff;
            margin-bottom: 20px;
        }

            .summary-card i {
                font-size: 2.5rem;
                color: #ff4757;
                margin-bottom: 15px;
            }

            .summary-card h3 {
                font-size: 1.4rem;
                font-weight: bold;
                margin-bottom: 5px;
            }

            .summary-card p {
                font-size: 1rem;
                color: #57606f;
            }

        /* Chart & Table */
        .chart-box, .movie-table {
            background: #fff;
            border-radius: 15px;
            padding: 20px;
            box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.1);
            margin-bottom: 30px;
        }

        /* Footer */
        footer {
            background: #2f3542;
            color: #fff;
            padding: 20px;
            margin-top: 40px;
            text-align: center;
        }

        .toast-success {
            background-color: #28a745 !important;
            color: #fff !important;
        }

        .toast-error {
            background-color: #dc3545 !important;
            color: #fff !important;
        }

        .toast-info {
            background-color: #17a2b8 !important;
            color: #fff !important;
        }

        .toast-warning {
            background-color: #ffc107 !important;
            color: #000 !important;
        }
    </style>
</head>
<body>

    <!-- Sidebar -->
    <div class="sidebar">
        <h2>MyMovies</h2>
        <a href="/Customer/Home/Index"><i class="bi bi-person-badge"></i> Main Page </a>
        <a href="/Admin/Home/Index"><i class="bi bi-person-badge"></i> Home</a>
        <a href="/Admin/Movies/IndexMovies"><i class="bi bi-film"></i> Movies</a>
        <a href="/Admin/Cinema/CinemaIndex"><i class="bi bi-building"></i> Cinemas</a>
        <a href="/Admin/Category/CategoriesIndex"><i class="bi bi-tags"></i> Categories</a>
        <a href="/Admin/Actor/ActorIndex"><i class="bi bi-person-badge"></i> Actors</a>
        <a href="/Admin/User/UserIndex"><i class="bi bi-person-badge"></i> Users</a>

    </div>

    <!-- Main Content -->

    @RenderBody()

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script>
        const ctx = document.getElementById('moviesChart').getContext('2d');
        const moviesChart = new Chart(ctx, {
          type: 'bar',
          data: {
            labels: ['Action', 'Drama', 'Comedy', 'Animation', 'Sci-Fi', 'Horror'],
            datasets: [{
              label: 'Number of Movies',
              data: [25, 20, 15, 18, 12, 10],
              backgroundColor: [
                '#ff6b6b', '#ff4757', '#ffa502', '#1e90ff', '#2ed573', '#3742fa'
              ],
              borderRadius: 8
            }]
          },
          options: {
            responsive: true,
            plugins: {
              legend: { display: false }
            },
            scales: {
              y: { beginAtZero: true }
            }
          }
        });
    </script>

</body>
</html>
