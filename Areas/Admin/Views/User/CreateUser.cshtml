@model SpecialRoles
@using Microsoft.AspNetCore.Identity




@section Scripts {

    @if (@TempData["Success-Message"] is not null)
    {
        <script>
            toastr.success('@TempData["Success-Message"]')
        </script>
    }
    else if (TempData["Error-Message"] is not null)
    {
        <script>
            toastr.error('@TempData["Error-message"]')
        </script>
    }
}




<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<title>Register - MyMovies</title>
<!-- Bootstrap 5 -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<!-- Bootstrap Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
<!-- Google Font -->
<link href="https://fonts.googleapis.com/css2?family=Cinzel+Decorative:wght@700&display=swap" rel="stylesheet">

<style>
    body {
        background: #fff;
        font-family: 'Poppins', sans-serif;
    }

    .register-container {
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 20px;
    }

    .register-card {
        background: #ffffff;
        border-radius: 20px;
        box-shadow: 0px 4px 20px rgba(0, 0, 0, 0.1);
        padding: 40px;
        max-width: 500px;
        width: 100%;
    }

    .register-title {
        font-family: 'Cinzel Decorative', cursive;
        font-weight: bold;
        font-size: 2rem;
        color: #ff4757;
        text-align: center;
        margin-bottom: 20px;
    }

    .form-control {
        border-radius: 12px;
        border: 1px solid #ddd;
        padding: 12px;
        font-size: 1rem;
    }

        .form-control:focus {
            border-color: #ff4757;
            box-shadow: 0 0 0 0.2rem rgba(255, 71, 87, 0.25);
        }

    .text-danger {
        display: block;
        margin-top: 5px;
        font-size: 0.875rem;
    }

    .submit-btn {
        background: linear-gradient(135deg, #ff6b6b, #ff4757);
        border: none;
        padding: 12px;
        font-size: 1.2rem;
        font-weight: bold;
        border-radius: 30px;
        color: white;
        width: 100%;
        transition: all 0.3s ease;
        margin-top: 10px;
    }

        .submit-btn:hover {
            transform: scale(1.05);
            box-shadow: 0px 6px 20px rgba(255, 71, 87, 0.5);
        }

    .input-group-text {
        background: #f8f9fa;
        border: none;
        font-size: 1.2rem;
    }
</style>


<div class="register-container">
    <div class="register-card">
        <h1 class="register-title">Create Account</h1>
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-person"></i></span>
                    <input asp-for="createUserVM.Name" name="Name" class="form-control" placeholder="Full Name">
                </div>
                <span asp-validation-for="createUserVM.Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-person"></i></span>
                    <input type="text" name="PhoneNumber" class="form-control" placeholder="PhoneNumber">
                </div>
                <span asp-validation-for="createUserVM.PhoneNumber" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-person-circle"></i></span>
                    <input asp-for="createUserVM.UserName" name="UserName" class="form-control" placeholder="Username">
                </div>
                <span asp-validation-for="createUserVM.UserName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                    <input asp-for="createUserVM.Email" name="Email" class="form-control" placeholder="Email">
                </div>
                <span asp-validation-for="createUserVM.Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-shield-lock"></i></span>
                    <select name="RoleID"  class="form-select">
                      <option value="">-- Select Role --</option>
                        @foreach (var item in Model.roles)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                </div>
                @* <span asp-validation-for="RoleID" class="text-danger"></span> *@
            </div>



            <div class="mb-3">
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-image"></i></span>
                    <input asp-for="createUserVM.UserImg" name="UserImg" type="file" class="form-control" accept="image/*" required>
                </div>
                <span asp-validation-for="createUserVM.UserImg" class="text-danger"></span>
            </div>



            <div class="mb-3">
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-lock"></i></span>
                    <input asp-for="createUserVM.PasswordHash" name="PasswordHash" type="password" class="form-control" placeholder="Password">
                </div>
                <span asp-validation-for="createUserVM.PasswordHash" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-shield-lock"></i></span>
                    <input asp-for="createUserVM.ConfirmPasswordHash" name="ConfirmPasswordHash" type="password" class="form-control" placeholder="Confirm Password">
                </div>
                <span asp-validation-for="createUserVM.ConfirmPasswordHash" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-geo-alt"></i></span>
                    <input type="text" name="City" class="form-control" placeholder="City">
                </div>
                <span asp-validation-for="createUserVM.City" class="text-danger"></span>
            </div>

             <div class="mb-3">
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-geo-alt"></i></span>
                    <input type="text" name="State" class="form-control" placeholder="State">
                </div>
                <span asp-validation-for="createUserVM.State"  class="text-danger"></span>
            </div>

            <div class="mb-3">
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-geo-alt"></i></span>
                    <input type="text" name="Street" class="form-control" placeholder="Street">
                </div>
                <span asp-validation-for="createUserVM.Street" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-geo-alt"></i></span>
                    <input type="text" name="ZipCode" class="form-control" placeholder="ZipCode">
                </div>
                <span asp-validation-for="createUserVM.ZipCode"  class="text-danger"></span>
            </div>
     

            <button type="submit" class="submit-btn">Register</button>
        </form>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>


