@model Actor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Movie</title>
    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .create-movie-card {
            max-width: 650px;
            margin: 50px auto;
            background: #ffffff;
            border-radius: 20px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            padding: 30px;
        }

        .form-label {
            font-weight: 600;
            color: #333;
        }

        .btn-submit {
            width: 100%;
            background: #007bff;
            color: #fff;
            font-weight: bold;
            border-radius: 50px;
            padding: 12px;
            transition: 0.3s ease;
        }

            .btn-submit:hover {
                background: #0056b3;
                transform: scale(1.03);
            }

        h2 {
            font-weight: bold;
            margin-bottom: 25px;
            text-align: center;
            color: #333;
        }
    </style>
</head>
<body>

    <div class="container">
        <div class="create-movie-card">
            <h2>Create New Movie</h2>
            <form method="post" enctype="multipart/form-data">
                <!-- Movie Name -->
                <div class="mb-3">
                    <label for="movieName" class="form-label">Actor First Name</label>
                    <input type="text" value="@Model.FirstName" class="form-control" id="movieName" placeholder="Enter movie name" name="FirstName">
                </div>

                <!-- Movie Description -->
                <div class="mb-3">
                    <label for="movieDescription" class="form-label">Last Name</label>
                    <input type="text" value="@Model.LastName" class="form-control" name="LastName" id="movieDescription" rows="4" placeholder="Enter Actor Last Name"></input>
                </div>


                <div class="mb-3">
                    <label for="movieDescription" class="form-label">Actor Bio</label>
                    <textarea class="form-control" name="Bio" id="movieDescription" rows="4" placeholder="Enter Actor Bio">@Model.Bio</textarea>
                </div>



                <!-- Price -->
                <div class="mb-3">
                    <label for="movieDescription" class="form-label">Actor News</label>
                    <textarea class="form-control" name="News" id="movieDescription" rows="4" placeholder="Enter Actor News">@Model.News</textarea>
                </div>

                <div class="mb-3">
                    <label for="movieImage" class="form-label">Movie Poster</label>
                    <input class="form-control" multiple type="file" id="movieImage" name="ProfilePictuer">
                </div>



                <!-- Submit Button -->
                <button type="submit" class="btn btn-submit">Submit</button>
            </form>
        </div>
    </div>


</body>
</html>

@section Scripts
{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>

}