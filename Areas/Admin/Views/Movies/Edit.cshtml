@model SingleCollection

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Movie</title>
    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .create-movie-card {
            max-width: 650px;
            margin: 50px auto;
            background: #ffffff;
            border-radius: 20px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            padding: 30px;
        }

        .form-label {
            font-weight: 600;
            color: #333;
        }

        .btn-submit {
            width: 100%;
            background: #007bff;
            color: #fff;
            font-weight: bold;
            border-radius: 50px;
            padding: 12px;
            transition: 0.3s ease;
        }

            .btn-submit:hover {
                background: #0056b3;
                transform: scale(1.03);
            }

        h2 {
            font-weight: bold;
            margin-bottom: 25px;
            text-align: center;
            color: #333;
        }
    </style>
</head>
<body>

    <div class="container">
        <div class="create-movie-card">
            <h2>Create New Movie</h2>
            <form method="post" enctype="multipart/form-data">
                <!-- Movie Name -->
                <div class="mb-3">
                    <label for="movieName" class="form-label">Movie Name</label>
                    <input value="@Model.Movies.Name" class="form-control" id="movieName" placeholder="Enter movie name" name="Name">
                </div>
                <span class="text-danger" asp-validation-for="@Model.Movies.Name"></span>

                <!-- Movie Description -->
                <div class="mb-3">
                    <label for="movieDescription" class="form-label">Movie Description</label>
                    <textarea class="form-control" name="Description" id="movieDescription" rows="4" placeholder="Enter movie description">@Model.Movies.Description</textarea>
                </div>
                <span class="text-danger" asp-validation-for="@Model.Movies.Description"></span>



                <!-- Price -->
                <div class="mb-3">
                    <label for="moviePrice" class="form-label">Price</label>
                    <input type="number" class="form-control" value="@Model.Movies.Price" id="moviePrice" placeholder="Enter ticket price" name="Price">
                </div>
                <span class="text-danger" asp-validation-for="@Model.Movies.Price"></span>


                <!-- Start Date -->
                <div class="mb-3">
                    <label for="startDate" class="form-label">Start Date & Time</label>
                    <input type="datetime-local" value="@Model.Movies.StartDate.ToString("yyyy-MM-ddTHH:mm")" class="form-control" id="startDate" name="StartDate">
                </div>

                <div class="mb-3">
                    <label for="startDate" class="form-label">End Date & Time</label>
                    <input type="datetime-local" value="@Model.Movies.EndDate.ToString("yyyy-MM-ddTHH:mm")" class="form-control" id="startDate" name="EndDate">
                </div>
                <span class="text-danger" asp-validation-for="@Model.Movies.StartDate"></span>

                <!-- Image Upload -->
                <div class="mb-3">
                    <label for="movieImage" class="form-label">Movie Poster</label>
                    <input class="form-control" multiple type="file" id="movieImage" name="ImgUrl">
                </div>
                <span class="text-danger" asp-validation-for="@Model.Movies.ImgUrl"></span>

                <!-- Status -->
                <div class="mb-3">
                    <label for="status" class="form-label">Status</label>
                    <select class="form-select" id="status" name="MovieStatus">
                        <option selected disabled>Choose status</option>
                        @foreach (var item in Enum.GetValues(typeof(MovieStatus)))
                        {
                            <option value="@item">@item.ToString()</option>
                        }
                    </select>
                </div>
                <span class="text-danger" asp-validation-for="@Model.Movies.MovieStatus"></span>


                <!-- Category -->
                <div class="mb-3">
                    <label for="category" class="form-label">Category</label>
                    <select class="form-select" id="category" name="CategoryId">
                        <option selected disabled>Select category</option>
                        @foreach (var item in Model.Categories)
                        {
                            @if(item.Id == Model.Movies.Category.Id)
                            {
                                <option value="@item.Id" selected>@item.Name</option>
                            }
                            else
                            {
                                <option value="@item.Id">@item.Name</option>
                            }
                        }
                    </select>
                </div>
                <span class="text-danger" asp-validation-for="@Model.Movies.CategoryId"></span>


                <!-- Cinema -->
                <div class="mb-3">
                    <label for="cinema" class="form-label">Cinema</label>
                    <select class="form-select" id="cinema" name="CinemaId">
                        <option selected disabled>Select cinema</option>
                        @foreach (var item in Model.Cinemas)
                        {
                            @if (item.Id == Model.Movies.Cinema.Id)
                            {
                                <option value="@item.Id" selected>@item.name</option>
                            }
                            else
                            {
                                <option value="@item.Id">@item.name</option>
                            }
                        }

                    </select>
                </div>
                <span class="text-danger" asp-validation-for="@Model.Movies.CinemaId"></span>


                <!-- Actors -->
                <div class="mb-3">
                    <label for="actors" class="form-label">Actors</label>
                    <select class="form-select" id="actors" multiple name="actors" >
                        @foreach (var item in Model.Actors)
                        {
                            <option value="@item.Id">@item.FirstName  @item.LastName</option>
                        }
                    </select>
                    <small class="text-muted">Hold Ctrl (Windows) or Cmd (Mac) to select multiple</small>
                </div>

                <!-- Submit Button -->
                <button type="submit" class="btn btn-submit">Submit</button>
            </form>
        </div>
    </div>

</body>
</html>

@section Scripts
{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>

}
