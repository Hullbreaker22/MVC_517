@model List<MovieCart>


@section Scripts {

    @if (@TempData["Success-Message"] is not null)
    {
        <script>
            toastr.success('@TempData["Success-Message"]')
        </script>
    }
    else if (TempData["Error-Message"] is not null)
    {
        <script>
            toastr.error('@TempData["Error-message"]')
        </script>
    }
}

<div class="container my-5">
    <div class="bg-white shadow rounded-4 p-4">
        <h2 class="mb-4 text-center fw-bold">🎬 Your Cart</h2>

        @if (Model != null && Model.Any())
        {
            <div class="row g-3">
                @foreach (var item in Model)
                {
                    <div class="col-12">
                        <div class="d-flex align-items-center justify-content-between border rounded-4 p-3 shadow-sm">
                            <!-- Movie Info -->
                            <div class="d-flex align-items-center">
                                <img src="~/images/@item.Movies.ImgUrl" alt="img"
                                     class="rounded-3 shadow-sm"
                                     style="width: 80px; height: 100px; object-fit: cover;">

                                <div class="ms-3">
                                    <h5 class="mb-1">@item.Movies.Name</h5>
                                    <p class="mb-0 text-muted">Date: @item.Movies.StartDate.ToString("dd MMM yyyy")</p>
                                    <p class="mb-0 fw-bold text-primary">$@item.Movies.Price</p>
                                </div>
                            </div>

                            <!-- Cart Controls -->
                            <div class="d-flex align-items-center gap-2">
                                <form asp-action="DecrementCart" method="post">
                                    <input type="hidden" name="productId" value="@item.Movies.Id" />
                                    <button type="submit" class="btn btn-outline-secondary btn-sm rounded-circle">-</button>
                                </form>

                                <input type="number" readonly value="@item.Count" class="form-control form-control-sm text-center" style="width:60px;" min="1"/>

                                <form asp-action="IncrementCart" method="post">
                                    <input type="hidden" name="productId" value="@item.Movies.Id" />
                                    <button type="submit" class="btn btn-outline-secondary btn-sm rounded-circle">+</button>
                                </form>

                                <form action="DeleteCart">
                                    <input type="hidden" name="id" value="@item.Movies.Id"/>
                                    <button type="submit" class="btn btn-success">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Promo + Payment -->
            <div class="mt-5 border-top pt-4">
                <form >
                    <input type="text" name="promoCode" class="form-control rounded-3" placeholder="Enter promo code">
                    <button type="submit" class="btn btn-success ">Apply</button>
                </form>

                <div class="d-flex justify-content-between align-items-center">
                    <h4 class="fw-bold">Total:
                        <span class="text-success">$@ViewBag.TotalPrice</span>
                    </h4>


                    <a href="/Customer/Cart/Pay" class="btn btn-primary btn-lg rounded-3 shadow">
                            💳 Confirm Payment
                        </a>

                </div>
            </div>
        }
        else
        {
            <div class="text-center p-5">
                <h4 class="text-muted">Your cart is empty 🎟️</h4>
            </div>
        }
    </div>
</div>
