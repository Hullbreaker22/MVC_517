<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Login</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Optional: Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        :root {
            --ring: 36 100% 45%;
            --card-radius: 22px;
        }

        body {
            background: #fff; /* white background as requested */
            min-height: 100vh;
        }

        .login-shell {
            max-width: 460px;
            width: 100%;
        }

        .card-glow {
            border-radius: var(--card-radius);
            background: #fff;
            box-shadow: 0 1px 2px rgba(0,0,0,.05), 0 8px 30px rgba(0,0,0,.08);
            padding: 28px;
            position: relative;
            border: 1px solid rgba(0,0,0,.06);
        }
            /* subtle accent ring */
            .card-glow::before {
                content: "";
                position: absolute;
                inset: -2px;
                border-radius: calc(var(--card-radius) + 2px);
                background: radial-gradient(1200px 1200px at 20% -10%, hsl(var(--ring)/.14), transparent 40%), radial-gradient(1200px 1200px at 120% 110%, hsl(var(--ring)/.14), transparent 40%);
                z-index: -1;
                filter: blur(8px);
            }

        .brand-dot {
            width: 44px;
            height: 44px;
            border-radius: 12px;
            display: grid;
            place-items: center;
            background: conic-gradient(from 220deg, hsl(var(--ring)/.16), transparent 55%) #f7f7f9;
            border: 1px solid rgba(0,0,0,.06);
        }

        .form-control:focus {
            border-color: hsl(var(--ring));
            box-shadow: 0 0 0 .2rem hsl(var(--ring)/.15);
        }

        .btn-primary {
            background: hsl(var(--ring));
            border-color: hsl(var(--ring));
        }

            .btn-primary:hover {
                filter: brightness(.95);
            }

        .link-muted {
            color: #6c757d;
            text-decoration: none;
        }

            .link-muted:hover {
                color: #343a40;
                text-decoration: underline;
            }

        .divider {
            height: 1px;
            background: rgba(0,0,0,.08);
        }
    </style>
</head>
<body >

    <main class="container" >
        <div class="mb-4 text-center">
            <div class="d-inline-flex align-items-center gap-2">
                <div class="brand-dot">
                    <i class="bi bi-shield-lock"></i>
                </div>
                <div class="text-start">
                    <div class="fw-semibold">Welcome back</div>
                    <small class="text-muted">Sign in to continue</small>
                </div>
            </div>
        </div>

        <form method="post" class="card-glow">
            <!-- Validation summary (server-side) -->
            <!-- <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div> -->

            <div class="mb-3">
                <label for="identifier" class="form-label">Email or Username</label>
                <input type="text"
                       class="form-control"
                       id="identifier" 
                       asp-for="EmailOrUserName"
                       placeholder="Username/Email"
                       autocomplete="username"
                       >
            </div>
            <span class="text-danger" asp-validation-for="EmailOrUserName" > </span>

            <div class="mb-2">
                <label for="password" class="form-label d-flex justify-content-between align-items-center">
                    <span>Password</span>
                    <button type="button" class="btn btn-sm btn-outline-secondary border-0 p-0" id="togglePassword" aria-label="Show password">
                        <i class="bi bi-eye" id="eyeIcon"></i>
                    </button>
                </label>
                <input type="password"
                       class="form-control"
                       id="password"
                       asp-for="Password"
                       placeholder="Password"
                       autocomplete="current-password"
                       >
            </div>
            <span class="text-danger" asp-validation-for="Password"> </span>

            <!-- Options row -->
            <div class="d-flex flex-wrap gap-3 align-items-center justify-content-between mt-2">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="true" id="rememberMe" name="RememberMe">
                    <label class="form-check-label" for="rememberMe">Remember me</label>
                </div>

                <div class="d-flex gap-3">
                    <a class="link-muted small" href="/Identity/Account/ForgetPassword">Reset password</a>

                    <a class="link-muted small" href="/Identity/Account/ResentEmail">Resend email confirmation</a>
                </div>
            </div>

            <div class="my-3 divider"></div>

            <!-- Submit button at the bottom of the page/card -->
            <div>
                <button type="submit" class="btn btn-primary btn-lg">
                    <i class="bi bi-box-arrow-in-right me-1"></i> Sign in
                </button>
            </div>

        </form>

        <p class="text-center text-muted small mt-3 mb-0">
            By continuing, you agree to our <a href="#" class="link-muted">Terms</a> and <a href="#" class="link-muted">Privacy Policy</a>.
        </p>
    </main>

    <script>
        // Simple show/hide password toggle
        const toggle = document.getElementById('togglePassword');
        const pwd = document.getElementById('password');
        const eye = document.getElementById('eyeIcon');

        toggle?.addEventListener('click', () => {
          const visible = pwd.type === 'text';
          pwd.type = visible ? 'password' : 'text';
          eye.className = visible ? 'bi bi-eye' : 'bi bi-eye-slash';
          toggle.setAttribute('aria-label', visible ? 'Show password' : 'Hide password');
        });
    </script>

    <!-- Bootstrap JS (optional) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
